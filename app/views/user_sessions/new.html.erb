<h1>User Log in</h1>

<% form_for @user_session, :url => user_session_path do |us| %>
  <%= us.error_messages %>
  <p>
    <%= us.label :login %>
    <%= us.text_field :login %>
  </p>
  
  <p>
    <%= us.label :password %>
    <%= us.password_field :password %>
  </p>
  
  <%= submit_tag 'Log in' %>
<% end -%>

<%= link_to 'Back', :back %>