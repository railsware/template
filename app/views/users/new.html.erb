<h1>Register user</h1>

<% form_for @user, :url => users_path do |u| %>
  <%= u.error_messages %>
  <p>
    <%= u.label :login %>
    <%= u.text_field :login %>
  </p>
  
  <p>
    <%= u.label :email %>
    <%= u.text_field :email %>
  </p>
  
  <p>
    <%= u.label :password %>
    <%= u.password_field :password %>
  </p>
  
  <p>
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation %>
  </p>
  
  <%= submit_tag 'Sign up' %>
<% end -%>